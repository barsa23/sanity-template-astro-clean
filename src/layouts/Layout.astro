---
// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions';

import Header from '../components/Header.astro';
import Cartablog from '../components/Cartablog.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <!-- Google fonts -->
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="p-2 bg-gray-950 font-sans text-white">
    <Cartablog class="m-10" />
    <div class="container">
      
      <!-- <header class="header">
        <a
          class="header__title"
          href="/"
          >Laura Locura </a>
        
      </header>
      <p class="mb-2 font-inter">un blog sobre Laura Locura</p> -->
      <main>
        <slot />
      </main>
      <!-- <footer class="footer">
        <p class="footer__text">
          Footercito
        </p>
      </footer> -->
    </div>
    <Footer />
  </body>
</html>

