---
import type { InferGetStaticParamsType } from "astro";
import { PortableText } from "astro-portabletext";
import Layout from "../../layouts/Layout.astro";
import { formatDate } from "../../utils";
import { urlFor } from "../../utils/image";
import { getPost, getPosts } from "../../utils/sanity";

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: post.slug.current },
  }));
}

type Params = InferGetStaticParamsType<typeof getStaticPaths>;
const { slug } = Astro.params as Params;

const post = await getPost(slug);
---

<Layout title={post.title!}>
  <section class="py-24 mx-auto md:px-12 lg:px-32 max-w-7xl">
    {
      post.mainImage ? (
        <img
          class="post__cover mx-auto  container object-cover w-[600px] rounded-2xl p-10"
          src={urlFor(post.mainImage).url()}
          alt="Cover image"
        />
      ) : (
        <div class="post__cover--none rounded-2xl" />
      )
    }
    <div class="post__container mx-auto">
      <h1 class="post__title mx-auto text-xl font-bold text-white sm:text-2xl">{post.title}</h1>
      <p class="post__date text-sm font-medium uppercase tracking-widest text-pink-500">
        {formatDate(post._createdAt)}
      </p>
      <p class="post__excerpt mb-10 text-sm font-light text-gray-400 sm:text-md">{post.excerpt}</p>
      <div class="post__content">
        <PortableText value={post.body} />
      </div>
    </div>
  </section>
</Layout>


